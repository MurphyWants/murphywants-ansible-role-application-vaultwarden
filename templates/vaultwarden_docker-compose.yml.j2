version: '3.3'
services:
    vaultwarden:
        container_name: vaultwarden
        environment:
            - TZ='{{ VAULTWARDEN_TIMEZONE }}'
            - COMPOSE_PROJECT_NAME=vaultwarden
        ports:
            - '127.0.0.1:{{ VAULTWARDEN_HTTP_PORT }}:80/tcp'
        volumes:
            - '{{ VAULTWARDEN_PATH }}/volumes/data:/data'
        image: 'docker.io/vaultwarden/server:{{ VAULTWARDEN_CONTAINER_VERSION }}'
        restart: unless-stopped
        network_mode: bridge
